import java.util.*;

class Product {
    String name;
    String category;

    Product(String name, String category) {
        this.name = name;
        this.category = category;
    }
}

public class RecommendationSystem {

    public static void main(String[] args) {        List<Product> products = new ArrayList<>();
        products.add(new Product("iPhone", "Electronics"));
        products.add(new Product("Laptop", "Electronics"));
        products.add(new Product("Headphones", "Electronics"));
        products.add(new Product("T-Shirt", "Fashion"));
        products.add(new Product("Jeans", "Fashion"));
        products.add(new Product("Novel Book", "Books"));
        products.add(new Product("Science Book", "Books"));

        Scanner sc = new Scanner(System.in);

        System.out.println("Enter your interested category:");
        System.out.println("Electronics / Fashion / Books");
        String userPreference = sc.nextLine();

        System.out.println("\nRecommended Products for you:");

        boolean found = false;
        for (Product p : products) {
            if (p.category.equalsIgnoreCase(userPreference)) {
                System.out.println("- " + p.name);
                found = true;
            }
        }

        if (!found) {
            System.out.println("No recommendations found for this category.");
        }

        sc.close();
    }
}
